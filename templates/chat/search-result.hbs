<div class="search-chat {{cssClass}}">
  <h3>{{localize "FULLSEARCH.chat_intro"}}</h3>
  <div class="motif">{{localize "FULLSEARCH.chat_text"}}{{searchPattern}}</div>
  <div class="btn-highlight"><button id="highlight" data-tooltip="FULLSEARCH.highlight_tooltip">{{localize "FULLSEARCH.highlight_button"}}</button></div>
  {{#if hasresults}}
    {{#if tooMuchResults}}
      {{localize "FULLSEARCH.too_many_results"}}
    {{else}}
      {{#if pageresults}}
        <h4>{{localize "DOCUMENT.JournalEntryPages"}}</h4>
        <div>
          {{#each pageResultCollection as |page|}}
            {{page.journalName}}
            - @UUID[JournalEntry.{{page.journalId}}.JournalEntryPage.{{page.id}}]<br />
          {{/each}}
        </div>
      {{/if}}
      {{#if actorresults}}
        <h4>{{localize "DOCUMENT.Actors"}}</h4>
        <div>
          {{#each actorResultCollection as |actor|}}
            @UUID[Actor.{{actor._id}}]<br />
          {{/each}}
        </div>
      {{/if}}
      {{#if itemresults}}
        <h4>{{localize "DOCUMENT.Items"}}</h4>
        <div>
          {{#each itemResultCollection as |item|}}
            @UUID[Item.{{item._id}}]<br />
          {{/each}}
        </div>
      {{/if}}
    {{/if}}
  {{else}}
    {{localize "FULLSEARCH.no_results"}}
  {{/if}}
</div>